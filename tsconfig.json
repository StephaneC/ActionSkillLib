{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "**/*.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}