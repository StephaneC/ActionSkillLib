{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "**/*.d.ts",
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}